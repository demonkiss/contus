//-
    @file admin.jade
    @author zx
    @description 录入页

extend ../layout

block content
    .container
        .row
            form.form-horizontal(method="post",action="/user/product/preview",enctype="multipart/form-data")
                if product._id
                    input(type= "hidden", name="product[_id]" , value=product._id)
                .form-group
                    label.col-sm-2.control-label 分类选择
                    .col-sm-10
                        each cat in categories
                            label.radio-inline
                                if product._id
                                    input(type="radio", name="product[category]", value=cat._id, checked=cat._id.toString()== product.category)
                                    | #{cat.name}
                                else
                                    input(type="radio", name="product[category]", value=cat._id)
                                    | #{cat.name}
                .form-group
                    label.col-sm-2.control-label(for="input_title") 名字
                    .col-sm-10
                        input#input_title.form-control(type="text" name="product[title]" value=product.title placeholder="请录入产品名字")
                .form-group
                    label.col-sm-2.control-label(for="input_description") 简介
                    .col-sm-10
                        input#input_description.form-control(type="text" name="product[description]" value=product.description placeholder="请输入简介")
                .form-group
                    label.col-sm-2.control-label(for="input_time") 时间
                    .col-sm-10
                        input#input_time.form-control(type="text" name="product[time]" value=product.time placeholder="请输入上架时间")
                .form-group
                    label.col-sm-2.control-label(for="upload_poster") 图片上传
                    .col-sm-10
                        input#upload_poster(type="file",name="uploadPoster")
                .form-group
                    .col-sm-offset-2.col-sm-10
                    button.btn.btn-default(type="submit") 存储
