    @file header.jade
    @author zx
    @description 注册页

extend ../layout
block content
    .container
        .raw
            .col-md-5
                form(method= "POST", action="/user/signup")
                    .modal-header  #{message}
                    .modal-body
                        .form-group
                            label(for="signup_name") 用户名
                            input#signup_name.form-control(name="user[name]",type="text")
                        .form-group
                            label(for="signupPassword") 密码
                            input#signup_password.form-control(name="user[password]",type="text")
                    .modal-footer
                        button.btn.btn-default(type="button" data-dismiss="modal") 关闭
                        button.btn.btn-success(type="submit") 注册
