//-
    @file userList.jade
    @author zx
    @description  用户列表页
extends ../layout
block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 用户名
                        th 创建时间
                        th 更新时间
                        th 查看
                        th 修改
                        th 删除
                tbody
                    each item in userList
                        tr(class="item-id-#{item._id}")
                            td #{item.name}
                            td #{moment(item.meta.createAt).format('MM/DDYYYY')}
                            td #{moment(item.meta.updateAt).format('MM/DDYYYY')}
                            td: a(target="_blank", href="../product/#{item._id}") 查看
                            td: a(target="_blank", href="../admin/update/#{item._id}") 修改
                            td: button.btn.btn-danger.del(type="button",data-id="#{item._id}") 删除
