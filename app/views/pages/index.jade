    @file index.jade
    @author zx
    @description 首页
extends ../layout
block content
    .container
        .raw
            each cat in categories
                .panel.panel-default
                    .penel-heading
                        h3
                            a(href="/results?cat=#{cat._id}&p=0") #{cat.name}
                    .panel-body
                        if cat.products && cat.products.length > 0
                            each item in cat.products
                                .col-md-2
                                    .thumbnail
                                        a(href="/product/#{item._id}")
                                            img(src="/upload/#{item.poster}",alt="#{item.title}")
                                        .caption
                                            h3 #{item.title}
                                            p
                                                a.btn.btn-primary(href="/product/#{item._id}",role="button") 查看详情
